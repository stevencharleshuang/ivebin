<% include ../../partials/boilerplate %>
<% console.log('View Rendered: User Private Profile') %>

<div class="home-wrapper">
  <div class="home-main">
    <div class="blue-bar"><h1>This is a private user blog entry view</h1></div>
      <div class="entry">
        Testing Only:<br>
        User Id: <%= entry.user_id %><br>
          <p>

            <%= entry.title  %><br>
