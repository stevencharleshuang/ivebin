<% include ../../partials/boilerplate %>
<% console.log('View Rendered: User Private Profile') %>
<%# console.log(entries) %>

<div class="home-wrapper">
  <div class="home-main">
  <div class="blue-bar"><h1>This is a private user profile view</h1></div>
  <h3>Username: <%= user.username %></h3>
  <h4>Name: <%= user.name %></h4>
  <img src="<%= user.avatar_url %>">
  <p>
    <a href="/private/users/<%= user.id %>/new">Create New Blog Entry</a>
  </p>
  <% console.log('User entries:', entries) %>
  <% if (entries[0].content !== null) { entries.forEach(entries => { %>
      <div class = "entries">
        <p>
          <a href="/private/entries/<%= entries.id %>">
            Title: <%= entries.title %><br>
            Location: <%= entries.location %><br>
            Date: <%= entries.date_created %><br>
          </a>
        </p>
      </div>
    <% })} else { %>
            <p> no blog posts </p>
          <% } %>
    <a href="/private/users/<%= user.id %>/edit">
      <input type="button" value="Edit User">
    </a>
    <form method='POST' action="/private/users/<%= user.id %>?_method=DELETE">
      <input type="Submit" value="Delete Account">
    </form>
  </div>
</div>

<% include ../../partials/end %>
